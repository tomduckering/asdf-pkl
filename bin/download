#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=./lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

download_version() {
	local install_type="$1"
	local install_version="$2"
	local download_path="$3"

	if [ "$install_type" == "ref" ]; then
		return 1
	fi

	os_type=$(uname -s)
	case "$os_type" in
	Darwin)
		os_type="macos"
		;;
	Linux)
		os_type="linux"
		;;
	*)
		echo "Unsupported OS: $os_type"
		exit 1
		;;
	esac
	arch_type=$(uname -m)
	case "$arch_type" in
	x86_64)
		arch_type="amd64"
		;;
	arm64)
		arch_type="aarch64"
		;;
	*)
		echo "Unsupported architecture: $arch_type"
		exit 1
		;;
	esac

	curl -s -L -o "$download_path/pkl" "https://github.com/apple/pkl/releases/download/${install_version}/pkl-${os_type}-${arch_type}"
	chmod +x "$download_path/pkl"
	return 0
}

download_version "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_DOWNLOAD_PATH"
